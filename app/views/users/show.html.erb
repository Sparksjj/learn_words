<%provide(:title, "#{@user.name}")%>

<div class="col-md-4">
	<h3><%=@user.name%><h3>
	<p><%=@user.email%></p>
	<%=link_to 'All users', users_path%>
</div>
<div class="col-md-7 col-md-offset-1">

<div class="jumbotron">
	<h3>You have <%=pluralize(@words.count, 'word')%></h3>
	<%@words.each do |word|%>
	<p>word</p>
	<%end%>
</div>